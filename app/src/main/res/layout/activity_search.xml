<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Code"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cod"/>
        <Button
            android:background="@drawable/buttonstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sear"
            android:text="search"/>
        <TextView
            android:textSize="18dp"
            android:visibility="gone"
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="model"/>
        <EditText
            android:visibility="gone"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m"/>
        <TextView
            android:textSize="18dp"
            android:visibility="gone"
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"/>
        <EditText
            android:visibility="gone"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/n"/>
        <TextView
            android:textSize="18dp"
            android:visibility="gone"
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seller Name"/>
        <EditText
            android:visibility="gone"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/o"/>
        <TextView
            android:textSize="18dp"
            android:visibility="gone"
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"/>
        <EditText
            android:visibility="gone"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/p"/>
        <TextView
            android:textSize="18dp"
            android:id="@+id/t5"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner Name"/>
        <EditText
            android:visibility="gone"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/q"/>
        <TextView
            android:textSize="18dp"
            android:id="@+id/t6"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner Mobile no:"/>
        <EditText
            android:visibility="gone"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/r"/>
           <Button
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/update"
               android:text="Update"/>
        <Button
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            android:text="Delete"/>
    </LinearLayout>

</ScrollView>